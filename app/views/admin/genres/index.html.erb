<div class="container">
  <h4 class="title bg-light"><strong>ジャンル一覧・追加</strong></h4>
  <div class="row">
    <div class="col-lg-7 my-4">
      <%= form_with model: @genre, url: admin_genres_path, method: :post, local: true do |f| %>
        <%= f.label :name, "ジャンル名" %>
        <%= f.text_field :name %>
        <%= f.submit "新規登録", class:"btn btn-success" %>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-5">
      <table class="table">
        <thead class="bg-light">
          <tr>
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td class="text-right"><%= link_to "編集する", edit_admin_genre_path(genre), class:"btn btn-success" %></td>
          <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
