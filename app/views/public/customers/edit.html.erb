<div class="container">
  <div class="row">
    <div class="col-sm-3 px-sm-0 offset-sm-1">
      <h2>会員情報編集</h2>
    </div>
    
    <div class="col-xs-3">
      <%= form_with model: @customer, url: customers_edit_path, local:true do |f| %>

      <div class="field form-group col-xs-12">
        <%= f.label :"名前", class: "col-sm-3" %>
        <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name",placeholder: "令和" %>
        <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name",placeholder: "道子" %>
      </div>

      <div class= "field form-group col-xs-12">
        <%= f.label :"フリガナ", class: "col-sm-3" %>
        <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", placeholder: "レイワ" %>
        <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana",placeholder: "ミチコ" %>
      </div>

      <div class="field form-group col-xs-12">
        <%= f.label :"郵便番号（ハイフンなし）", class: "col-sm-3" %>
        <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", placeholder: "00000000" %>
      </div>

      <div class="field form-group col-xs-12">
        <%= f.label :"住所(ハイフンなし)", class: "col-sm-3" %>
        <%= f.text_field :address, autofocus: true, autocomplete: "address", placeholder: "東京都渋谷区代々木神園町0-0", :size => "50*50" %>
      </div>

      <div class="field form-group col-xs-12">
        <%= f.label :"電話番号", class: "col-sm-3" %>
        <%= f.telephone_field :telephone_number, autofocus: true, autocomplete: "telephone_number", placeholder: "0000000000" %>
      </div>
  
      <div class="field form-group col-xs-12">
        <%= f.label :"メールアドレス", class: "col-sm-3" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" ,placeholder: "sample@example.com" %>
      </div>

      <div class = "actions col-sm-3 px-sm-0 offset-sm-3">
        <%= f.submit "編集内容を保存", class: "btn btn-success mb-4" %>
      </div>
      <% end %>
    </div>
  </div>
</div>