<div class="container">
  <div class = "row">
    <h2>新規会員登録</h2></br>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

  <%= render "public/shared/error_messages", resource: resource %>


  <div class="field form-group col-xs-12">
    <%= f.label :"名前", class: "col-sm-3" %>
    <%= f.label :"(姓)" %>
    <%= f.text_field :last_name, required: true, autofocus: true, autocomplete: "last_name",placeholder: "田中" %>
    <%= f.label :"(名)" %>
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name",placeholder: "太郎" %>
  </div>

  <div class= "field form-group col-xs-12">
     <%= f.label :"フリガナ", class: "col-sm-3" %>
     <%= f.label :"(セイ)" %>
     <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", placeholder: "タナカ" %>
     <%= f.label :"(メイ)" %>
     <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana",placeholder: "タロウ" %>
  </div>

  <div class="field form-group col-xs-12">
    <%= f.label :"メールアドレス", class: "col-sm-3" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" ,placeholder: "sample@example.com" %>
  </div>

  <div class="field form-group col-xs-12">
    <%= f.label :"郵便番号（ハイフンなし）", class: "col-sm-3" %>
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", placeholder: "00000000" %>
  </div>

  <div class="field form-group col-xs-12">
    <%= f.label :"住所", class: "col-sm-3" %>
    <%= f.text_field :address, autofocus: true, autocomplete: "address", placeholder: "〇〇県〇〇市〇〇区〇〇町00-0", :size => "50*50" %>
  </div>

  <div class="field form-group col-xs-12">
    <%= f.label :"電話番号（ハイフンなし）", class: "col-sm-3" %>
    <%= f.telephone_field :telephone_number, autofocus: true, autocomplete: "telephone_number", placeholder: "0000000000" %>
  </div>

  <div class="field form-group col-xs-12">
    <%= f.label :"パスワード6文字以上", class: "col-sm-3" %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field form-group col-xs-12">
    <%= f.label :"パスワード(確認用)", class: "col-sm-3" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions col-sm-3 px-sm-0 offset-sm-3">
    <%= f.submit "新規登録",class: "btn btn-success mb-4" %>
  </div>
  <% end %>


  <h4>既に登録済みの方</h4></br>

  <div class = "col-sm-4 px-sm-0 offset-sm-2">
    <%= render "public/shared/links" %> から新規登録を行ってください。
  </div>

</div>