<div class="container">
  <h4 class="title"><strong>予約情報確認</strong></h4>
  <div class="row">
    <div class="col">

      <table class="table table-bordered mt-3">
        <thead>
          <tr class="bg-light">
            <th>店舗名</th>
            <th>日付</th>
            <th>時間</th>
          </tr>
        </thead>
        
        <tbody>
          <tr>
            <td><%= @store.name %></td>
            <td><%= @reservation.date %></td>
            <td><%= @reservation.time %></td>
          </tr>
        </tbody>
        
  <div class="row justify-content-center">
    <%= form_with model: @reservation, url: reservations_path(@reservation.id), method: :post do |f| %>
      <%= f.hidden_field :customer_id %>
      <%= f.hidden_field :address %>
      <%= f.hidden_field :name %>
      <%= f.hidden_field :time %>
      <%= f.hidden_field :date %>
      <%= f.submit "予約を確定する", class: "btn btn-success" %>
    <% end %>
  </div>
</div>