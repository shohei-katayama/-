<div class="container">
  <h4 class="title"><strong>予約情報確認</strong></h4>
  <div class="row">
    <div class="col">

      <table class="table table-bordered mt-3">
        <thead>
          <tr class="bg-light">
            <th>店舗名</th>
            <th>日付</th>
            <th>時間</th>
            <th>人数</th>
          </tr>
        </thead>

        <tbody>
          <tr>
            <td><%= @store.name %></td>
            <td><%= @reservation.date.strftime("%Y年%m月%d日") %></td>
            <td><%= @reservation.time.strftime("%H:%M") %></td>
            <td><%= @reservation.guests %></td>
          </tr>
        </tbody>

  <div class="row justify-content-center">
    <%= form_with model: @reservation, url: thanks_store_reservations_path(@store, reservation_id: params[:reservation_id]), method: :patch do |f| %>
      <%= f.submit "予約を確定する", class: "btn btn-success" %>
    <% end %>
  </div>
</div>