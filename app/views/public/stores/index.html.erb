<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <h2>店舗一覧(全<%= @stores.count %>件)</h2>
    </div>
  </div>

  <div class="row">
    <% @stores.each do |store| %>
      <div class="col-sm-3">
        <div>
          <%= link_to store_path(store.id) do %>
            <%= image_tag store.get_image(200,100) %>
          <% end %>
        </div>
        <div>
          <p><%= store.name %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>
